<h1>Edit <%= @duck.name %>'s Page</h1>

<% if flash[:my_errors] %>
    <ul>
        <% flash[:my_errors].each do |error| %>
            <li><%= error %></li>
        <% end %>
    </ul>
<% end %>

<%= form_for @duck do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <br>
    <br>
    <%= f.label :description %>
    <%= f.text_field :description %>
    <br>
    <br>
    <%= f.submit %>
  
<% end %>